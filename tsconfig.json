{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "files": [
    "src/BitsUtil.ts",
    "src/ClientMessage.ts",
    "src/Config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}