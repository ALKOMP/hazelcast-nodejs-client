{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "removeComments": true
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "typings/browser.d.ts",
        "typings/browser"
    ]
}
