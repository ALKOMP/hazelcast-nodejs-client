{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "es5",
        "outDir": "./lib",
        "preserveConstEnums": true,
        "noLib": true,
        "removeComments": true,
        "sourceMap": true
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}
